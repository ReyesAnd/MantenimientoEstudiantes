<h2>Listado de Estudiantes</h2>

<table class="table table-striped">
    <thead>
        <tr>
            <th>Matrícula</th>
            <th>Nombre</th>
            <th>Promedio</th>
            <th>Literal</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var est in Model)
        {
            <tr>
                <td>@est.Matricula</td>
                <td>@est.Nombre</td>
                <td>@est.Promedio.ToString("F2")</td>
                <td>@est.Literal</td>
            </tr>
        }
    </tbody>
</table>
